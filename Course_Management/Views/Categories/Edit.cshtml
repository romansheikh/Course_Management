@model Course_Management.Models.Category

@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row z-depth-2">
        <h4 class="center">Edit Skill</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CategoryId)

        <div class="row">
            <div class="input-field col s12">
                @Html.EditorFor(model => model.CategoryTitle)
                @Html.ValidationMessageFor(model => model.CategoryTitle, "", new { @class = "red-text" })
                @Html.LabelFor(model => model.CategoryTitle)
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12">
                @Html.ActionLink("Back to list", "Index", "Skills", new { @class = "waves-effect waves-light btn teal lighten-1" })
                <input type="submit" value="Save Changes" class="waves-effect waves-light btn teal lighten-1 right" />
            </div>
        </div>
    </div>
}

