@model Course_Management.ViewModels.LoginVM
@{
    ViewBag.Title = "Login";
}
<div class="row">

</div>
@using (Html.BeginForm(null, null, new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col s6 offset-s3 z-depth-5">
            <h4>Login</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "red-text" })
            <div class="row">
                <div class="input-field col s12">
                    @Html.LabelFor(x => x.UserName)
                    @Html.EditorFor(x => x.UserName, new { htmlAttributes = new { @class = "" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "red-text" })
                </div>

                <div class="input-field col s12">
                    @Html.LabelFor(x => x.Password)
                    @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "", type = "Password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "red-text" })
                </div>


            <div class="input-field col s12">
                @Html.ActionLink("Not registered?", "Registration", null, new { @class = "" })
                <button type="submit" class="btn right">Log In</button>
            </div>
            </div>
        </div>
    </div>
}

@section Scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}
