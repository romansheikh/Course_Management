@model IEnumerable<Course_Management.IdentityModels.User>
@{
    ViewBag.Title = "DeactiveAccount";
}

<div class="row"></div>
<div class="row">
    @using (Html.BeginForm("DeactiveAccount", "Account", FormMethod.Post, new { role = "form" }))
    {
        <div class="col s10 offset-s1 z-depth-2">
            <h4 class="center">Active Accounts</h4>
            <hr />
            @if (Model.Count() > 0)
            {
                <table>
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Select to Active</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Username</td>
                                <td>@item.FirstName @item.LastName</td>
                                <td>@item.Email</td>
                                <td>
                                    @using (Html.BeginForm("DeactiveAccount", "Account", FormMethod.Post, new { }))
                                    {
                                        <input name="username" id="username" value="@item.Username" type="hidden" />
                                        <input type="submit" value="Deactivate" class="btn" />
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="center">No Active Account!</p>
            }
        </div>
    }
</div>


