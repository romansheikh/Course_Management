@model Course_Management.IdentityModels.Role
@{
    ViewBag.Title = "CreateRole";
}

<div class="row">

</div>
@using (Html.BeginForm(null, null, new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col s6 offset-s3 z-depth-5">
            <h4>Create Role</h4>
            <hr />
            @if (!string.IsNullOrEmpty(ViewBag.Msg))
            {
                <div>
                    <p class="center">@ViewBag.Msg</p>
                </div>
            }
            @Html.ValidationSummary(true, "", new { @class = "red-text" })
            <div class="row">
                <div class="input-field col s12">
                    @Html.LabelFor(x => x.RoleName)
                    @Html.EditorFor(x => x.RoleName, new { htmlAttributes = new { @class = "" } })
                    @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "red-text" })
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <button type="submit" class="btn">Create</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}


