@model Course_Management.ViewModels.UserRolesVM
@{
    ViewBag.Title = "AssignRole";
}
<div class="row">

</div>

@using (Html.BeginForm(null, null, new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col s6 offset-s3 z-depth-5">
            <h4>Assign Role</h4>
            <hr />
            @if (!string.IsNullOrEmpty(ViewBag.Msg))
            {
                <div>
                    <p class="center">@ViewBag.Msg</p>
                </div>
            }
            @Html.ValidationSummary(true, "", new { @class = "red-text" })
            <div class="row">
                <div class="input-field col s10 offset-s1">
                    @Html.DropDownListFor(model => model.UserId, new SelectList(ViewBag.UserList, "UserId", "Username"), "Select", new { @class = "" })
                    @Html.LabelFor(x => x.UserId, new { @class = "" })
                    @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "red-text" })
                </div>
            </div>
            <div class="row">
                <div class="input-field col s10 offset-s1">
                    @Html.DropDownListFor(model => model.RoleId, new SelectList(ViewBag.RoleList, "RoleId", "RoleName"), "Select", new { @class = "" })
                    @Html.LabelFor(x => x.RoleId, new { @class = "" })
                    @Html.ValidationMessageFor(model => model.RoleId, "", new { @class = "red-text" })
                </div>
            </div>
            <div class="row">
                <div class="input-field col s10 offset-s1">
                    <button type="submit" class="btn">Assign</button>
                </div>
            </div>

        </div>
    </div>
}

@section Scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('select').formSelect();
        })
    </script>
}

